
 <div id="page-content-wrapper">
  <div class="page-content inset">
    <div class="row">
        <div class="col-md-12">
          <div class="content">
          <div class="row">
            <h1>Stakeholders</h1>
            <h3><strong>Edit <%= @associated.kind %>:</strong> </strong><%= @associated.name %></h3>
            <hr>                    
            </div>
            <%= semantic_form_for @associated do |f| %>
            <%= f.input :name %>
            <%= f.input :ci_rif %>
            <%= f.input :alias %>
            <%= f.input :email %>
            <%= f.input :phone %>
            <%= f.input :address %>
            <%= f.input :kind, :as => :select, :collection => Associated.kinds.keys.to_a %>
            <%= f.input :frequency, :as => :select, :collection => Associated.frequencies.keys.to_a %>
            <%= f.input :status, :as => :select, :collection => Associated.statuses.keys.to_a %>
            <%= f.input :description %>
            <%= f.submit :class => "btn btn-primary" %> 
            <%= link_to "Cancel", "/associateds", :class => 'btn btn-success' %>                   
            <% end %>          
          </div>
      </div>
    </div>
  </div>
