 
<div id="page-content-wrapper">
  <div class="page-content inset">
    <div class="row">
        <div class="col-md-12">
          <div class="content">
            <div class="row">
            <h1>Products</h1>
               <%= link_to "New Product", new_product_path, :class => 'btn btn-mini btn-success' %>    
             <hr>                    
            </div>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <th>NÂ°</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Update</th>
                    <th>Delete</th>
                  </thead>
                  <tbody>
                    <% @products.each_with_index do |product, index| %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= product.name %></td>
                      <td><%= product.description %></td>
                      <td><%= product.price %></td>
                      <td><%= link_to  "Details", product_path(product), :class => 'btn btn-info' %></td>
                      <td><%= link_to  "Edit", edit_product_path(product), :class => 'btn btn-primary' %></td>
                      <td><%= link_to "Delete", product, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>                  
          </div> 
      </div>
    </div>
  </div>


<div class="modal-dialog fade" role="document" id="my-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="myModalLabel">Delete</h4>
    </div>
    <div class="modal-body">
      <h3>Are you sure?</h3>
    </div>
    <div class="modal-footer">
      <%= button_to "Delete", products_path(@products), method: :delete, :class => 'btn btn-danger' %>
    </div>
  </div>
</div>   



